{
  "description": "Catosplace Ubuntu 18.04 Packer Image Build",
  "min_packer_version": "1.4.0",
  "_comment": "Build with `packer build ubuntu.json`",
  "builders": [
    {
      "boot_command": [
        "{{ user `boot_command_prefix` }}",
        "install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer={{ user `locale` }}<wait>",
        " fb=false<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " keyboard-configuration/xkb-keymap=us<wait>",
        " locale={{ user `locale` }}<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname={{ user `hostname` }}<wait>",
        " noapic<wait>",
        " passwd/user-default-groups='{{ user `ssh_username` }} sudo'<wait>",
        " passwd/user-fullname={{ user `ssh_username` }}<wait>",
        " passwd/user-uid={{ user `user_uid` }}<wait>",
        " passwd/user-password={{ user `ssh_password` }}<wait>",
        " passwd/user-password-again={{ user `ssh_password` }}<wait>",
        " passwd/username={{ user `ssh_username` }}<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed`}}<wait>",
        " time/zone={{ user `time_zone` }}<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus" : "{{user `build_cpus` }}",
      "disk_size": "{{user `disk_size` }}",
      "floppy_files": [
        "http/{{ user `preseed` }}"
      ],
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "./iso/{{ user `iso_name` }}",
        "{{ user `iso_mirror` }}",
        "http://releases.ubuntu.com/{{user `iso_path`}}/{{user `iso_name`}}"
      ],
      "output_directory": "builds/packer-{{user `vm_name`}}-virtualbox-iso",
      "post_shutdown_delay": "1m",
      "shutdown_command": "echo '{{ user `ssh_password` }}' | sudo -S shutdown -P now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--nictype1", "virtio" ],
        [ "modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}" ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `vm_name` }}"
    }
  ],
  "_comment": "Validate with `packer validate ubuntu.json`",
  "variables": {
    "boot_command_prefix": "<esc><wait><esc><wait><enter><wait>",
    "build_cpus": "2",
    "cpus": "2",
    "disk_size": "40960",
    "headless": "true",
    "hostname": "vagrant",
    "iso_checksum": "ea6ccb5b57813908c006f42f7ac8eaa4fc603883a2d07876cf9ed74610ba2f53",
    "iso_checksum_type": "sha256",
    "iso_name": "ubuntu-18.04.2-live-server-amd64.iso",
    "iso_mirror": "http://ucmirror.canterbury.ac.nz/linux/ubuntu/bionic/ubuntu-18.04.2-live-server-amd64.iso",
    "iso_path": "bionic",
    "locale": "en_NZ",
    "memory": "1024",
    "preseed": "preseed.cfg",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "time_zone": "Pacific/Auckland",
    "user_uid": "1000",
    "vm_name": "ubuntu1804"
  }
}